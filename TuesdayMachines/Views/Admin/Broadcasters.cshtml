﻿@{
    ViewData["Title"] = "Broadcasters";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}

@await Html.PartialAsync("_ModalConfirmBox", "Are you sure you want to delete this broadcaster?")

@{
    await Html.RenderPartialAsync("~/Views/Shared/_NavBar.cshtml");
}

@section Stylesheets {
    <link href="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.css" rel="stylesheet">
}

@section Scripts {
    <script src="https://cdn.datatables.net/v/bs5/dt-1.13.6/datatables.min.js"></script>
    <script>
        const getBroadcastersUrl = '@Url.Action("GetBroadcasters", "Admin")';
        const deleteBroadcasterUrl = '@Url.Action("DeleteBroadcaster", "Admin")';
    </script>

    <script src="~/js/admin/broadcasters.js"></script>
}

<div class="modal fade" id="broadcasterModal" tabindex="-1" aria-labelledby="broadcasterModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="broadcasterModalLabel">Add broadcaster</h5>
                <button type="button" class="btn-close btn-primary" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="p-2" data-url="@Url.Action("AddBroadcaster","Admin")" data-callback="addBroadcasterResponse">
                    <div class="mb-1">
                        <label>Login</label>
                        <input data-form-name="login" type="text" class="form-control" minlength="4" maxlength="25" pattern="^[a-zA-Z0-9_ ]*$" required="">
                    </div>
                    <div class="mb-1">
                        <label>Points name</label>
                        <input data-form-name="points" type="text" class="form-control" minlength="2" maxlength="25" pattern="^[a-zA-Z0-9_ ]*$" required="">
                    </div>
                    <div class="mb-1">
                        <button type="submit" class="btn btn-primary mt-2">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container footer-padding mb-5">
    <main role="main" class="pb-3">
        <div class="p-3">
            <div class="mb-3 d-grid gap-2 d-md-flex justify-content-md-end">
                <button type="button" data-bs-toggle="modal" data-bs-target="#broadcasterModal" class="btn btn-primary mt-2 float-end">Add broadcaster</button>
            </div>

            <table id="broadcastersTable" class="table table-striped" style="width:100%">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Login</th>
                        <th>Points name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </main>
</div>